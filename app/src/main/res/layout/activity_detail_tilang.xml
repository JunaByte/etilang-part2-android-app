					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:text=":" />

					<TextView
						android:id="@+id/pg_isi"
						android:layout_width="240dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:paddingRight="32dp"
